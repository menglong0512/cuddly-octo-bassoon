// tsconfig.json
{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        // "module": "es2015",
        "module": "esNext",
        "moduleResolution": "node",
        // 允许从没有设置默认导出的模块中默认导入
        "allowSyntheticDefaultImports": true,
        // 启用 vue-class-component 及 vuex-class 需要开启此选项
        "experimentalDecorators": true,
        // 启用 vuex-class 需要开启此选项
        "strictFunctionTypes":false,
        "removeComments": true,
        "lib": ["dom", "es2015", "es6"]
    }
}
